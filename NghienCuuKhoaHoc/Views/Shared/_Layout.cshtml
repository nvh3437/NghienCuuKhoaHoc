                                <span class="hide-menu">Trang chủ</span>
                            </a>
                        </li>
                        <li class="sidebar-item">
                            <a class="sidebar-link waves-effect waves-dark sidebar-link" href="/Personal"
                                aria-expanded="false">
                                <i class="fas fa-user-md" aria-hidden="true"></i>
                                <span class="hide-menu">Giảng viên</span>
                            </a>
                        </li>
                        <li class="sidebar-item">
                            <a class="sidebar-link waves-effect waves-dark sidebar-link" href="/Research"
                                aria-expanded="false">
                                <i class="fa fa-table" aria-hidden="true"></i>
                                <span class="hide-menu">Đề tài Nghiên cứu</span>
                            </a>
                        </li>
                        <li class="sidebar-item">
                            <a class="sidebar-link waves-effect waves-dark sidebar-link" href="/Acceptance"
                                aria-expanded="false">
                                <i class="fas fa-cube" aria-hidden="true"></i>
                                <span class="hide-menu">Nghiệm thu</span>
                            </a>
                        </li>
                        <li class="sidebar-item">
                            <a class="sidebar-link waves-effect waves-dark sidebar-link" href="/Council"
                                aria-expanded="false">
                                <i class=" fas fa-balance-scale" aria-hidden="true"></i>
                                <span class="hide-menu">Hội đồng</span>
                            </a>
                        </li>
                        <li class="sidebar-item">
                            <a class="sidebar-link waves-effect waves-dark sidebar-link" href="/Department"
                                aria-expanded="false">
                                <i class=" fas fa-bookmark" aria-hidden="true"></i>
                                <span class="hide-menu">Phòng - Khoa</span>
                            </a>
                        </li>
                        <li class="sidebar-item">
                            <a class="sidebar-link waves-effect waves-dark sidebar-link" href="/Account"
                                aria-expanded="false">
                                <i class="fa fa-user" aria-hidden="true"></i>
                                <span class="hide-menu">Tài khoản</span>
                            </a>
                        </li>
                        <li class="sidebar-item d-block d-sm-none">
                            <a class="sidebar-link waves-effect waves-dark sidebar-link" href="#"
                                aria-expanded="false"  data-bs-toggle="modal" data-bs-target="#userModal" >
                                <i class=" fas fa-info-circle" aria-hidden="true"></i>
                                <span class="hide-menu">@user.UserName</span>
                            </a>
                        </li>
                        <li class="text-center p-20 upgrade-btn">
                            <a href="/Login/Logout"
                                class="btn d-grid btn-danger text-white">
                                Đăng xuất</a>
                        </li>
                    </ul>

                </nav>
                <!-- End Sidebar navigation -->
            </div>
            <!-- End Sidebar scroll-->
        </aside>
        <!-- ============================================================== -->
        <!-- End Left Sidebar - style you can find in sidebar.scss  -->
        <!-- ============================================================== -->
        <!-- ============================================================== -->
        <!-- Page wrapper  -->
        <!-- ============================================================== -->
        <div class="page-wrapper">
            
            @RenderBody()
            <!-- ============================================================== -->
            <!-- End Container fluid  -->
            <!-- ============================================================== -->
