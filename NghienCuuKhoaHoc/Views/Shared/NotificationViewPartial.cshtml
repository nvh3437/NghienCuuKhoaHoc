<script>
      
    function LoadNotify() {
      var toastElList = [].slice.call(document.querySelectorAll('.notification'));
      var toastList = toastElList.map(function(toastEl) {
        return new bootstrap.Toast(toastEl,{
            delay: 3000
        });
      })
      toastList.forEach(toast => toast.show());
      windowLoad();
    }
    document.getElementById("close-notifi").onclick = function() {
      var toastElList = [].slice.call(document.querySelectorAll('.notification'));
      var toastList = toastElList.map(function(toastEl) {
        return new bootstrap.Toast(toastEl);
      })
      toastList.forEach(toast => toast.hide());
    }
</script>