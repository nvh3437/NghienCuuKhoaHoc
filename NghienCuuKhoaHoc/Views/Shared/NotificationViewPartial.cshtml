@using NghienCuuKhoaHoc.Services
@model Notification
<div class="toast align-items-center notification fixed-bottom ms-2 mb-2" role="alert" aria-live="assertive" aria-atomic="true">
    <div class="d-flex @Model.GetClass()">
        <div class="toast-body">
            @Model.Message
        </div>
        <button id="close-notifi" type="button" class="btn-close me-2 m-auto" data-bs-dismiss="toast" aria-label="Close"></button>
    </div>
</div>

